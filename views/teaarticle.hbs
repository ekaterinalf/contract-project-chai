<div class="card mb-3 content teablock container col-md-4">
  <img src="{{article.img}}" class="card-img-top tea_img" alt="...">

  <div class="card-body">
    <h5 class="card-title">{{article.nameTea}}</h5>
    <h5 class="card-title">{{article.region}}</h5>
    <p class="card-text">{{article.description}}</p>

    </i>
  </div>
</div>
{{#if userArticle}}
<div id="commentDiv" class="form content container col-md-4">
  <form id="commentForm" action="/article/{{article.id}}" method="POST">
    <div class="mb-3">
      <div class="form-text">Оставьте Ваш комметарий</div>
      <label for="comment" class="form-label"></label>
      <input type="text" name="text" class="form-control" id="commentInput" placeholder="Комментарий">
    </div>
    <div class="submit">
      <button type="submit" id="buttonSubmit" class="btn btn-primary">Отправить</button>
    </div>
  </form>
</div>
{{/if}}


<div class="content container col-md-4" style="border:none">
  {{#if comments}}
  {{#each comments}}
  <div class=" container comments ">
    <p id="author">{{this.author.name}}</p>
    {{!-- <p id="post">{{this.postTea}}</p> --}}
    <p id="content">{{this.content}}</p>
    <button class="deleteComment" action="/article" method="delete">Удалить комментарий</button>
  </div>
  {{/each}}
  {{/if}}
</div>

